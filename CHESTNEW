function thisCode()
    repeat task.wait() until game:IsLoaded()
    local Players = game:GetService("Players")
    local LocalPlayer = Players.LocalPlayer

    local function log(text)
        print("[DEBUG]: " .. tostring(text))
    end

    -- Fungsi untuk mencari dan menyentuh chest
    task.spawn(function()
        while true do
            if LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart") then
                local foundChest = nil
                for _, obj in pairs(game.Workspace:GetDescendants()) do
                    if obj:IsA("BasePart") and obj.Name:lower():find("chest") then
                        foundChest = obj
                        break
                    end
                end

                if foundChest then
                    log("Chest ditemukan: " .. foundChest.Name)
                    -- Pindahkan ke posisi chest
                    LocalPlayer.Character:PivotTo(foundChest:GetPivot())
                    task.wait(0.5) -- Tunggu agar posisi karakter stabil
                    -- Sentuh chest
                    pcall(function()
                        firetouchinterest(LocalPlayer.Character.HumanoidRootPart, foundChest, 0)
                        task.wait(0.1)
                        firetouchinterest(LocalPlayer.Character.HumanoidRootPart, foundChest, 1)
                    end)
                else
                    log("Chest tidak ditemukan di server ini.")
                end
            end
            task.wait(1)
        end
    end)
end

thisCode()
